mixin textField(value, placeholder)
    input(type='text' value=value placeholder=placeholder).inputText

mixin dateField(value, placeholder)
    +b.dateField
        +e('input')(type='text' value=value placeholder=placeholder).field.inputText
        +e('span').button.box-row.align-middle: +inputSelect()

mixin selectField(value)
    +b.selectField.inputText
        +e('span').title=value
        +e('span').button.box-row.align-middle: +inputSelect()

mixin plusButton(className)
    button.plusButton(class=className).box-row.align-middle: +plusPurple()

mixin addButton(className)
    button(class=className).addButton.box-row.align-middle: +plus()

mixin editButton(className)
    button(class=className).editButton.box-row.align-middle: +pen()

mixin filePreview(color, type, title)
    +b.filePreview.box-row.align-center
        +e.icon.box-row
            +file()
            +e('b')(style=`--color: ${color}`).type=type
        +e.info.box-col
            +e('span').title=title
            +e.data.box-row
                +e('span').date 19.07.2018, 17:39
                +e('span').size 32 Мб

mixin countWidget(count, className)
    b.countWdget(class=className)=count

mixin addUsers(users, className)
    .addUsers.box-row(class=className)
        each user in users
            img(src=user)

mixin userChip(src, title)
    +b.userChip.box-row.align-center
        +e('img')(src=src).pic
        +e('span').title=title
        +e('span').closed.box-row.align-middle: +chipClosed()

mixin purpleButton(title)
    button.purpleButton=title

mixin purpleLightButton(title)
    button.purpleLightButton=title
