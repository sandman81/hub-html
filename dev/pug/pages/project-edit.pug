extends ../layout/main
include ../components/tabs
include ../components/fields
include ../components/mainSidebar

block variables
	- const title = 'HUB - Проекты'
	- const description = ''
	- const keywords = ''
	- const layout = true
	- const pageTitle = 'Проекты'
	- const innerPage = true
	- const tabs = ['Базовые', 'Диаграмма Гантта', 'Финансовые выплаты', 'Итоговые файлы']
	-
		const fields = [
			'Название',
			'Дата начала/Дата конца',
			'Вид строительства',
			'Вид объекта',
			'Капитальное строительство',
			'Регион',
			'Стадия проектирования',
			'Стоимость по проекту',
			'Предоплата',
			'Сумма выплаты',
			'Постоплата'
		]
	- const sidebarMenu = ['Основная информация', 'Исходные данные']

block main
	+tabs(tabs)
	+b.project-card.box-row.space-between.align-start
		+e.main
			+e.edit.blockWhite
				+e.label.titleLevel2 Основная информация
				+e.top.box-row.align-center
					+e('label').choice-pic
						input(type='file')
						+e('span').choice-file.box-row.align-middle.relative
							img(src=`${contentImages}/project-avatar.png`).wrapper-absolute
							+photo()
					+e.top-info.box-col
						+e('h1').top-title.titleLevel1 ЖК “Новый век”
						+e('span').top-id ID: 123456789101112
				+e.form
					each field, index in fields
						+e.form-item.box-row.align-center
							+e('label').form-label=field
							if index === 0
								+textField('ЖК “Новый Век”')
							if index === 1
								+e.form-two-fields.box-row.full-width
									+e.form-two-field: +dateField('08.12.2020')
									+e.form-two-field: +dateField('22.12.2020')
							if index === 2
								+selectField('Новое строительство')
							if index === 3
								+selectField('Капитальное строительство')
							if index === 4
								+selectField('Производственного назначения')
							if index === 5
								+e.form-two-fields.box-row.full-width
									+e.form-two-field: +selectField('Россия')
									+e.form-two-field: +textField('Нижний Новгород')
							if index === 6
								+selectField('Проектная документация')
							if index === 7
								+textField('', 'Сумма')
							if index === 8
								+e.form-two-fields.box-row.full-width
									+e.form-two-field: +dateField('', 'Дата выплаты')
									+e.form-two-field: +textField('', 'Сумма')
							if index === 9
								+e.form-two-fields.box-row.full-width.with-plus
									+e.form-two-field: +dateField('', 'Дата выплаты')
									+e.form-two-field: +textField('', 'Сумма')
									+plusButton('plus-button')
							if index === 10
								+e.form-two-fields.box-row.full-width
									+e.form-two-field: +dateField('', 'Дата выплаты')
									+e.form-two-field: +textField('', 'Сумма')
			button.purpleButton Сохранить
		+mainSidebar(sidebarMenu, 0)
