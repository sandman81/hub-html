extends ../layout/main

block variables
	- const title = 'HUB - Восстановить пароль'
	- const description = ''
	- const keywords = ''

block content
	span.registerLink
		| У Вас  еще нет аккаунта? 
		a(href='/') Регистрация
	+b.enter-wrapper.box-row.space-center
		+b.enter-box.box-col.radius13
			+e('b').title.titleLevel1 Восстановить пароль
			+e('span').label Отлично, теперь придумайте новый пароль для завершения восстановления
			+e('form').form
				+e.field.box-row.align-center.relative
					+e('label').field-label Новый пароль
					+e('input')(type='password').field-input.inputText
					div.viewPass: +viewPass()
				+e.field.box-row.align-center.relative
					+e('label').field-label Повторите пароль
					+e('input')(type='password').field-input.inputText
				+e.action.box-col
					button.purpleButton Продолжить
