.project-card
    margin-top 24px
    &__main
        flex 1 1 auto
        margin-right 24px
    &__edit
        margin-bottom 24px
    &__label
        padding-bottom 10px
        border-bottom 3px solid #EFF1F7
        margin-bottom 24px
    &__top
        margin-bottom 17px
        &-id
            line-height 22px
            color #afb7c3
    &__choice
        &-pic
            margin-right 30px
            input
                display none
        &-file
            width 78px
            height 78px
            border-radius 50%
            overflow hidden
            cursor pointer
            &:before
                content ''
                @extend .wrapper-absolute
                background-color rgba(black, .4)
                z-index 1
            svg
                position relative
                z-index 2
    &__form
        &-item
            &:not(:last-child)
                margin-bottom 16px
        &-label
            flex 0 0 198px
            line-height 22px
            color grayTextLight
            padding-right 20px
        &-two
            &-field
                flex 1 1 50%
                .with-plus &:last-of-type
                    flex-basis calc(50% - 28px)
                &:first-child
                    margin-right 10px
        .plus-button
            margin-left 4px
    &__initial-label
        line-height 22px
        color grayTextLight
        margin-bottom 14px
    &__initial-items
        .add-button
            margin-right 8px