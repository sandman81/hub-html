.dateField
    position relative
    width 100%
    &__button
        width 42px
        height 42px
        position absolute
        right 0
        top 0
        cursor pointer

.selectField
    position relative
    width 100%
    cursor pointer
    user-select none
    &__title
        display block
        line-height 38px
    &__button
        width 40px
        height 40px
        position absolute
        right 0
        top 0

.plusButton
    cursor pointer
    border none
    border-radius 50%
    width 24px
    height 24px
    flex 0 0 24px
    background-color violetColorLight
    align-self center

.filePreview
    cursor pointer
    &__icon
        position relative
        width 32px
        height 32px
    &__type
        position absolute
        width 26px
        height 13px
        text-align center
        line-height 13px
        background-color var(--color)
        bottom 5px
        left 3px
        font-size 10px
        font-family Arial
        color #fcfcfc
    &__info
        margin-left 2px
        font-size 12px
        line-height 17px
    &__title
        color #252525
        margin-bottom 1px
    &__data
        color #808080
    &__size
        margin-left 9px

.addUsers
    margin-left 12px
    img
        width 30px
        height 30px
        border-radius 50%
        margin-left -12px

.userChip
    position relative
    height 24px
    border-radius 4px
    background-color violetColorLight
    padding 0 35px 0 1px
    &__pic
        height 22px
        width 22px
        border-radius 50%
    &__title
        font-size 12px
        color black
        margin-left 9px
    &__closed
        cursor pointer
        position absolute
        right 2px
        top 2px
        width 20px
        height 20px