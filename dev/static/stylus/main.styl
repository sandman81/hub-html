@import 'utils/fonts'
@import 'utils/icons'
@import 'utils/vars'
@import 'utils/mixins'
@import 'utils/flexbox'
@import 'utils/extends'
// @import 'libs'

*
    margin 0
    padding 0

*, *:before, *:after
	box-sizing border-box

html
    height 100%
    min-height 100%

article, aside, details, figcaption, figure, footer, header, hgroup, main, nav, section, summary
    display block

body
    font 16px fontManrope, Tahoma, sans-serif
    height 100%
    color black
    line-height 1
    min-height 100vh
    overflow-x hidden
    background-color bodyBg

h1, h2, h3, h4, h5, h6
    margin 0

a
    color violetColor
    text-decoration none
    &:hover
        text-decoration underline

ul, li
	list-style-type none
	margin 0
	padding 0

p
    margin 0

img
    border none
    max-width 100%
    height auto

audio,
canvas,
iframe,
img,
svg,
video
	vertical-align middle

input,
textarea,
select,
button
    outline none
    vertical-align middle
    font-family fontManrope
    font-size 16px
    color black

.layout-body
    height 100vh
    min-height 100vh

.content-wrapper
    min-width 375px
    flex 1 0 auto
    overflow hidden

.logo
    position fixed
    left 50px
    top 23px
    z-index 30

//modules
@import "modules/**/*.styl"

//pages
@import "pages/**/*.styl"


// components
@import './components/**/*.styl'

