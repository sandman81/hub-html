.relative
    position relative

.full-height
    height 100%

.full-width
    width 100%

.wrapper-absolute
    position absolute
    width 100%
    height 100%
    left 0
    top 0

.text-center
    text-align center

.radius13
    border-radius 13px

// buttons

.purpleButton
    cursor pointer
    height 44px
    border-radius 8px
    color white
    border none
    background-color violetColor
    letter-spacing 0.1px
    font-weight 500
    width 226px
    &[disabled]
        pointer-events none
        background-color buttonDisabled

.purpleLightButton
    cursor pointer
    height 44px
    border-radius 8px
    color violetColor
    border none
    background-color violetColorLight
    letter-spacing 0.1px
    font-weight 500
    width 226px

.addButton
    width 36px
    height 36px
    border-radius 8px
    border none
    cursor pointer
    background-color violetColor

.editButton
    width 36px
    height 36px
    border-radius 8px
    border none
    cursor pointer
    background-color violetColor

.countWdget
    width 30px
    height 30px
    border-radius 50%
    background-color violetColorLight
