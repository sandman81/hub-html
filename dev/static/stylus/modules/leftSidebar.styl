.left-sidebar
    position fixed
    left 0
    top 0
    height 100vh
    width 321px
    background whiteLight
    border-right 1px solid grayBorder
    padding 95px 50px 50px 50px
    &__link
        flex 0 0 55px
        color black
        &:hover
            text-decoration none
            color violetColor
        &.active
            color violetColor
            font-weight 500
        &-icon
            flex 0 0 24px
            margin-right 16px
            svg
                fill #AFB7C3
                .left-sidebar__link.active &,
                .left-sidebar__link:hover &
                    fill violetColor