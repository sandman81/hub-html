.modal-wrapper
    position fixed
    left 0
    top 0
    background-color rgba(#B4BCD9, .5)
    z-index 100
    &__container
        background-color white
        border-radius 8px
        flex 0 0 820px
        padding 50px 40px 50px 113px
        max-height 760px
    &__closed
        cursor pointer
        position absolute
        right 0
        top 0
        width 50px
        height 50px

.conitions-text
    line-height 22px
    color grayTextLight
    overflow hidden
    &__static
        padding-right 20px
    h2
        margin-bottom 17px
    p:not(:last-child)
        margin-bottom 20px

.add-users-window
    padding-right 73px
    &__title
        margin-bottom 30px
    &__select-field
        border 2px solid purpleBorder
        border-radius 2px
        max-height 74px
        min-height 42px
        padding 4px
        margin-bottom 35px
        .userChip
            margin 4px
    &__list
        height 400px
        &:after
            content ''
            background url(generalImages/modal-shadow.png)
            width 594px
            height 7px
            position absolute
            left 0
            bottom 0
    &__item
        cursor pointer
        flex 0 0 50px
        &-pic
            width 30px
            height 30px
            border-radius 50%
        &-title
            font-weight 500
            font-size 14px
            color grayText3
            margin-left 10px
    &__actions
        margin-top 40px